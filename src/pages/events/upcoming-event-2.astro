---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { events } from '../../data/events';

const event = events[1];
---

<Layout title={`${event.title} | Events`}>
  <main class="max-w-4xl mx-auto px-4 py-16">
    <article class="bg-white rounded-lg shadow-sm">
      <div class="aspect-w-16 aspect-h-9 bg-gray-100 mb-8">
        <!-- Add your event image here -->
      </div>
      
      <div class="px-6 pb-8">
        <div class="flex items-center gap-2 mb-4">
          <span class="px-3 py-1 text-sm bg-blue-100 text-blue-800 rounded-full">
            {event.category}
          </span>
        </div>
        
        <h1 class="text-4xl font-bold mb-6">{event.title}</h1>
        
        <div class="flex items-center text-gray-600 mb-8">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {event.location}
        </div>
        
        <div class="prose prose-lg max-w-none">
          <p class="text-xl text-gray-600 mb-8">{event.description}</p>
          
          <div class="whitespace-pre-line">
            {event.content}
          </div>
        </div>
        
        <div class="mt-12 pt-8 border-t">
          <a href="/events" class="inline-flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Events
          </a>
        </div>
      </div>
    </article>
  </main>
</Layout>

<style>
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%;
  }
  .aspect-w-16 > * {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style> 